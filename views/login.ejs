<!-- views/login.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>User Login</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
</head>
<body class="bg-gray-100">

    <div class="mx-auto max-w-md p-4 bg-white border border-gray-200 rounded-lg shadow sm:p-6 md:p-8 dark:bg-gray-800 dark:border-gray-700">
        <h1 class="text-2xl font-bold mb-6 text-gray-900 dark:text-white text-center">User Login</h1>

        <form class="space-y-4" action="/api/login" method="POST" id="loginForm">
            <div>
                <label for="email" class="block text-sm font-medium text-gray-900 dark:text-white">Your email</label>
                <input
                    type="email"
                    id="email"
                    name="email"
                    class="w-full p-2.5 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white"
                    placeholder="name@company.com"
                    required
                />
            </div>
            <div>
                <label for="password" class="block text-sm font-medium text-gray-900 dark:text-white">Your password</label>
                <input
                    type="password"
                    id="password"
                    name="password"
                    class="w-full p-2.5 border border-gray-300 rounded-lg focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-600 dark:border-gray-500 dark:placeholder-gray-400 dark:text-white"
                    required
                />
            </div>
            <button
                class="w-full bg-blue-700 hover:bg-blue-800 text-white font-medium rounded-lg py-2"
                type="submit"
            >
                Login
            </button>
            <div class="text-sm font-medium text-gray-500 dark:text-gray-300 text-center">
                Not registered? <a href="/api/createUser" class="text-blue-700 hover:underline dark:text-blue-500">Create account</a>
            </div>
        </form>

        <div class="text-center mt-4">
            <a class="text-blue-700 hover:underline dark:text-blue-500" href="/api/reset-password">Forgot Password?</a>
        </div>
    </div>

    <script>
        document.getElementById('loginForm').addEventListener('submit', function(event) {
            const emailInput = document.getElementById('email');
            const passwordInput = document.getElementById('password');

            if (!isValidEmail(emailInput.value)) {
                emailInput.classList.add('border-red-500');
                event.preventDefault();
            } else {
                emailInput.classList.remove('border-red-500');
            }

            if (passwordInput.value.length < 6) {
                passwordInput.classList.add('border-red-500');
                event.preventDefault();
            } else {
                passwordInput.classList.remove('border-red-500');
            }
        });

        function isValidEmail(email) {
            const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
            return emailRegex.test(email);
        }
    </script>
</body>
</html>
